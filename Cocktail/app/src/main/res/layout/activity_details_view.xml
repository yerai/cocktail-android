<?xml version="1.0" encoding="utf-8"?>

    <ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout
            android:id="@+id/image_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_cocktail_details"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txt_header"
                    android:layout_width="264dp"
                    android:layout_height="86dp"
                    android:background="#FFFFFF"
                    android:padding="15dp"
                    android:text="@string/bloody_mary_Header"
                    android:textColor="#212529"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:typeface="sans"
                    app:fontFamily="@font/open_sans_bold" />

                <ToggleButton
                    android:id="@+id/myToggleButton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="98dp"
                    android:layout_marginLeft="98dp"
                    android:layout_marginTop="36dp"
                    android:layout_marginEnd="22dp"
                    android:layout_marginRight="22dp"
                    android:layout_toEndOf="@+id/txt_header"
                    android:layout_toRightOf="@+id/txt_header"
                    android:textOff=""
                    android:textOn="" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="52dp">

                <TextView
                    android:id="@+id/txt_subTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="15dp"
                    android:paddingLeft="15dp"
                    android:text="@string/servings"
                    android:textColor="#212529"
                    android:textSize="20sp"
                    app:fontFamily="@font/open_sans_bold" />

                <Spinner
                    android:id="@+id/servings_spinner"
                    android:layout_width="90dp"
                    android:layout_height="26dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="212dp"
                    android:layout_marginLeft="212dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toEndOf="@+id/txt_subTitle"
                    android:layout_toRightOf="@+id/txt_subTitle"
                    android:backgroundTint="#ff0000"
                    android:overlapAnchor="false"
                    android:prompt="@string/app_name"
                    android:spinnerMode="dropdown" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/txt_subTitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="Ingredients"
                    android:textColor="#212529"
                    android:textSize="20sp"
                    app:fontFamily="@font/open_sans_bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ListView
                    android:id="@+id/Cocktails_Ingredients_list"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:paddingLeft="15dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btn_share"
                    android:layout_width="345dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="34dp"
                    android:layout_marginLeft="34dp"
                    android:layout_marginEnd="35dp"
                    android:layout_marginRight="35dp"
                    android:onClick="myClickHandler"
                    android:text="@string/share_shopping_list"
                    android:textSize="15sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_subTitle4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingLeft="10dp"
                android:paddingTop="15dp"
                android:text="Glass"
                android:textColor="#212529"
                android:textSize="20sp"
                app:fontFamily="@font/open_sans_bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:text="- Old-fashioned glass"
                android:textColor="#000000"
                android:textSize="18sp"
                app:fontFamily="sans-serif" />

            <TextView
                android:id="@+id/txt_subTitle3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:text="Instructions"
                android:textColor="#212529"
                android:textSize="20sp"
                app:fontFamily="@font/open_sans_bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="10dp"
                android:text="Stirring gently, pour all ingredients into highball glass. Garnish."
                android:textColor="#000000"
                android:textSize="18sp" />

        </LinearLayout>

    </ScrollView>

